@model Student

<form method="post" asp-action="EditStudent">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Modifica Contul</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Nume"></label>
			<input asp-for="Nume" class="form-control"/>
			<span asp-validation-for="Nume" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Prenume"></label>
			<input asp-for="Prenume" class="form-control" />
			<span asp-validation-for="Prenume" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="Parola"></label>
			<input asp-for="Parola" class="form-control" />
			<span asp-validation-for="Parola" class="text-danger"></span>

		</div>
		<div class="mb-3">
			<label asp-for="An"></label>
			<input asp-for="An" class="form-control" />
			<span asp-validation-for="An" class="text-danger"></span>
		</div>
		<input type="hidden" asp-for="StudentId" />
		<button type="submit" class="btn btn-primary">Modifica Contul</button>
		<a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Inapoi la Lista</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}